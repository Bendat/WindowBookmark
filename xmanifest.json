{

  "manifest_version": 2,
  "name": "Window Bookmark",
  "version": "1.0",

  "description": "Allows the bookmarking of a window and all the tabs in it.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["borderify.js"]
    }
  ],
  "applications": {
     "gecko": {
          "id": "windowbookmark@mozilla.org"
     }
  }

}